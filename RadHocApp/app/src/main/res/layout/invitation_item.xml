<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:background="#2196F3"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="2dp"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:layout_marginBottom="2dp"
		android:focusable="true">
		
		<TextView
			android:text="TicTacToe"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/invitation_gametype"
			android:textColor="@color/black"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="10dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginStart="10dp"
			android:layout_marginBottom="10dp"
			android:textSize="18sp" />
		
		<TextView
			android:text="Sara"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/invitation_opponentname"
			android:textColor="@color/black"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="10dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="10dp"
			android:textSize="18sp"
			app:layout_constraintStart_toEndOf="@+id/invitation_gametype"
			android:layout_marginStart="50dp" />
		
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@android:drawable/presence_online"
			android:id="@+id/invitation_accept_button"
			android:background="#00FFFFFF"
			android:scaleX="3"
			android:scaleY="3"
			app:layout_constraintEnd_toStartOf="@+id/invitation_decline_button"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginEnd="50dp" />
		
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@android:drawable/presence_busy"
			android:id="@+id/invitation_decline_button"
			android:background="#00FFFFFF"
			android:scaleX="3"
			android:scaleY="3"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginEnd="30dp" />
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>